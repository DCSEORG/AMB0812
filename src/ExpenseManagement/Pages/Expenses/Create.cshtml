@page
@model ExpenseManagement.Pages.Expenses.CreateModel
@{
    ViewData["Title"] = "Add Expense";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Add Expense</h4>
                
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Input.UserId" class="form-label">Employee</label>
                        <select asp-for="Input.UserId" asp-items="@(new SelectList(Model.Users, "UserId", "UserName"))" class="form-select">
                            <option value="">Select Employee</option>
                        </select>
                        <span asp-validation-for="Input.UserId" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Input.Amount" class="form-label">Amount (Â£)</label>
                        <input asp-for="Input.Amount" class="form-control" type="number" step="0.01" min="0.01" placeholder="0.00" />
                        <span asp-validation-for="Input.Amount" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Input.ExpenseDate" class="form-label">Date</label>
                        <input asp-for="Input.ExpenseDate" class="form-control" type="date" />
                        <span asp-validation-for="Input.ExpenseDate" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Input.CategoryId" class="form-label">Category</label>
                        <select asp-for="Input.CategoryId" asp-items="@(new SelectList(Model.Categories, "CategoryId", "CategoryName"))" class="form-select">
                            <option value="">Select Category</option>
                        </select>
                        <span asp-validation-for="Input.CategoryId" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="Input.Description" class="form-label">Description</label>
                        <textarea asp-for="Input.Description" class="form-control" rows="3" placeholder="Enter expense description"></textarea>
                        <span asp-validation-for="Input.Description" class="text-danger"></span>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a asp-page="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
