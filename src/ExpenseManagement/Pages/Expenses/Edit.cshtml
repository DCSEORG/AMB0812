@page "{id:int}"
@model ExpenseManagement.Pages.Expenses.EditModel
@{
    ViewData["Title"] = "Edit Expense";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Edit Expense</h4>
                
                @if (Model.Expense?.StatusId != 1)
                {
                    <div class="alert alert-warning">
                        This expense cannot be edited because it is no longer in Draft status.
                    </div>
                }
                
                <form method="post">
                    <input type="hidden" asp-for="Input.ExpenseId" />
                    
                    <div class="mb-3">
                        <label class="form-label">Employee</label>
                        <input class="form-control" value="@Model.Expense?.UserName" readonly disabled />
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Input.Amount" class="form-label">Amount (Â£)</label>
                        <input asp-for="Input.Amount" class="form-control" type="number" step="0.01" min="0.01" disabled="@(Model.Expense?.StatusId != 1)" />
                        <span asp-validation-for="Input.Amount" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Input.ExpenseDate" class="form-label">Date</label>
                        <input asp-for="Input.ExpenseDate" class="form-control" type="date" disabled="@(Model.Expense?.StatusId != 1)" />
                        <span asp-validation-for="Input.ExpenseDate" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Input.CategoryId" class="form-label">Category</label>
                        <select asp-for="Input.CategoryId" asp-items="@(new SelectList(Model.Categories, "CategoryId", "CategoryName"))" class="form-select" disabled="@(Model.Expense?.StatusId != 1)">
                        </select>
                        <span asp-validation-for="Input.CategoryId" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Status</label>
                        <div>
                            <span class="status-badge status-@Model.Expense?.StatusName.ToLower()">@Model.Expense?.StatusName</span>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="Input.Description" class="form-label">Description</label>
                        <textarea asp-for="Input.Description" class="form-control" rows="3" disabled="@(Model.Expense?.StatusId != 1)"></textarea>
                        <span asp-validation-for="Input.Description" class="text-danger"></span>
                    </div>
                    
                    <div class="d-flex gap-2">
                        @if (Model.Expense?.StatusId == 1)
                        {
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        }
                        <a asp-page="Index" class="btn btn-outline-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
